{
  "manifest_version": 3,
  "name": "NEXA",
  "version": "1.0.0",
  "description": "Global  size recommendation for top shopping brands.",
  "author": "NEXA  Team",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "NEXA",
    "default_icon": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "https://script.google.com/*",
    "https://*.amazon.in/*",
    "https://*.myntra.com/*",
    "https://*.ajio.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["welcome.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}